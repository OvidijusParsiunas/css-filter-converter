{
  "name": "css-filter-converter",
  "version": "1.0.109",
  "description": "A tool used to generate css filter color property via hexadecimal or rgb color formats",
  "main": "lib/index.js",
  "scripts": {
    "lint": "npx eslint . --ext .ts",
    "build": "npm run lint && tsc",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "execute": "ts-node src/index.ts",
    "watch": "tsc -w -p .",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OvidijusParsiunas/css-filter-converter.git"
  },
  "types": "lib/index.d.ts",
  "keywords": [
    "hex",
    "hexadecimal",
    "rgb",
    "hsl",
    "filter",
    "converter",
    "generator",
    "color",
    "css"
  ],
  "author": "Ovidijus Parsiunas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OvidijusParsiunas/css-filter-converter/issues"
  },
  "homepage": "https://cssfilterconverter.com",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/color-convert": "^2.0.0",
    "@types/dom-to-image": "^2.6.4",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.8",
    "@types/puppeteer": "^5.4.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "chai": "^4.3.6",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.1",
    "prettier": "^2.5.1",
    "puppeteer": "^13.1.1",
    "ts-node": "^10.6.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "color-convert": "^2.0.1",
    "dom-to-image": "^2.6.0"
  },
  "files": [
    "lib/**/*"
  ]
}
